@model List<FF.Data.Entities.Students.Student>
@{
    ViewData["Title"] = "Yemek Aktivitesi";
}

@section Scripts {
    <script src="~/lib/highlight.js/highlight.min.js"></script>
    <script src="~/js/demo/highlightjs.demo.js"></script>
    <script src="~/js/demo/sidebar-scrollspy.demo.js"></script>
}

<!-- BEGIN container -->
<div class="container">
    <!-- BEGIN row -->
    <div class="row justify-content-center">
        <!-- BEGIN col-10 -->
        <div class="col-xl-10">
            <!-- BEGIN row -->
            <div class="row">
                <!-- BEGIN col-9 -->
                <div class="col-xl-9">
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Aktiviteler</a></li>
                        <li class="breadcrumb-item active">Yemek Aktivitesi</li>
                    </ul>

                    <h1 class="page-header">
                        1-A Sınıfı <small>Lütfen öğrencilerin yemek aktivitelerini belirleyiniz...</small>
                    </h1>

                    <hr class="mb-4" />

                    <!-- BEGIN #cardGroups -->
                    <div id="cardGroups" class="mb-5">
                        <div class="card">
                            <div class="card-body">
                                @if (Model != null)
                                {
                                    int rowCount = 3;

                                    for (int i = 0; i < Model.Count % rowCount; i++)
                                    {
                                        <div class="card-columns">
                                            @foreach (var student in Model.Skip(i * rowCount).Take(rowCount).ToList())
                                            {
                                                <div class="card">
                                                    <div class="card-body">
                                                        <h5 class="card-title">@student.FullName</h5>
                                                        <p class="card-text"><small class="text-muted">Yemek miktarları</small></p>
                                                        <select class="custom-select" id="validationSelectValid" required>
                                                            <option>Hepsini yedi</option>
                                                            <option>Yarısını yedi</option>
                                                            <option>Hiç yemedi</option>
                                                        </select>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    }
                                }
                                else
                                {
                                    <p>Öğrenci bulunamadı !!!</p>
                                }

                                <button type="button" class="btn btn-primary">Kaydet</button>
                            </div>
                        </div>
                    </div>
                    <!-- END #cardGroups -->
                </div>
                <!-- END col-3 -->
            </div>
            <!-- END row -->
        </div>
        <!-- END col-10 -->
    </div>
    <!-- END row -->
</div>
<!-- END container -->