@model FF.Web.Models.Activity.GetMealActivityModel
@{
    ViewData["Title"] = "Yemek Aktivitesi";
}

@section Scripts {
    <script src="~/lib/highlight.js/highlight.min.js"></script>
    <script src="~/js/demo/highlightjs.demo.js"></script>
    <script src="~/js/demo/sidebar-scrollspy.demo.js"></script>
}

<!-- BEGIN container -->
<div class="container">
    <!-- BEGIN row -->
    <div class="row justify-content-center">
        <!-- BEGIN col-10 -->
        <div class="col-xl-10">
            <!-- BEGIN row -->
            <div class="row">
                <!-- BEGIN col-9 -->
                <div class="col-xl-9">
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Aktiviteler</a></li>
                        <li class="breadcrumb-item active">Yemek Aktivitesi</li>
                    </ul>

                    <h1 class="page-header">
                        1-A Sınıfı <small>Lütfen öğrencilerin yemek aktivitelerini belirleyiniz...</small>
                    </h1>

                    <hr class="mb-4" />

                    <!-- BEGIN #cardGroups -->
                    @using (Html.BeginForm("MealActivity", "Activity", FormMethod.Post))
                    {
                        <div id="cardGroups" class="mb-5">
                            <div class="card">
                                <div class="card-body">
                                    @if (Model.Students != null)
                                    {
                                        <div class="card-columns">
                                            @foreach (var student in Model.Students)
                                            {
                                                <div class="card">
                                                    <div class="card-body">
                                                        <h5 class="card-title">@student.Id</h5>
                                                        <h5 class="card-title">@student.FullName</h5>
                                                        <p class="card-text"><small class="text-muted">Yemek miktarları</small></p>
                                                        <div class="btn-group btn-group-toggle btn-group-sm" data-toggle="buttons">
                                                            <label class="btn btn-outline-success">
                                                                <input type="radio" asp-for="MealAmounts" name="options" id="option1" autocomplete="off" value=2> Bitirdi
                                                            </label>
                                                            <label class="btn btn-outline-warning">
                                                                <input type="radio" asp-for="MealAmounts" name="options" id="option2" autocomplete="off" value=1> Kısmen
                                                            </label>
                                                            <label class="btn btn-outline-danger">
                                                                <input type="radio" asp-for="MealAmounts" name="options" id="option3" autocomplete="off" checked value=0> Yemedi
                                                            </label>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    }
                                    else
                                    {
                                        <p>Öğrenci bulunamadı !!!</p>
                                    }

                                    <input type="submit" value="Submit" class="btn btn-primary" />
                                </div>
                            </div>
                        </div>
                    }
                    <!-- END #cardGroups -->
                </div>
                <!-- END col-3 -->
            </div>
            <!-- END row -->
        </div>
        <!-- END col-10 -->
    </div>
    <!-- END row -->
</div>
<!-- END container -->